<ul>
  <% if ::Refinery::CareHomes::Admin::CareHomesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.care_homes_admin_care_homes_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_care_homes_admin_care_home_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::CareHomes::Admin::CareHomesController.sortable? && ::Refinery::CareHomes::CareHome.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Care Homes"),
                 refinery.care_homes_admin_care_homes_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Care Homes"),
                 refinery.care_homes_admin_care_homes_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
