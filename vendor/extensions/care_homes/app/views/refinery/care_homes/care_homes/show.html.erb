<% content_for :body_content_title do %>
  <%= @care_home.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @care_home.name %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @care_home.address %>
    </p>
  </section>
  <section>
    <h1>Town</h1>
    <p>
      <%=raw @care_home.town %>
    </p>
  </section>
  <section>
    <h1>Postcode</h1>
    <p>
      <%=raw @care_home.postcode %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="care_homes">
      <% @care_homes.each do |care_home| %>
        <li>
          <%= link_to care_home.name, refinery.care_homes_care_home_path(care_home) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
