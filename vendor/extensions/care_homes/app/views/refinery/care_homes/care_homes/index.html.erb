<% content_for :body do %>
  <%= form_tag(refinery.care_homes_care_home_search_path) do %>
    <%= text_field_tag 'postcode' %>
    <%= submit_tag 'Search' %>
  <% end %>
  <ul id="care_homes">
    <% @care_homes.each do |care_home| %>
      <li>
        <%= link_to care_home.name, refinery.care_homes_care_home_path(care_home) %>
        <%= care_home.address %>
        <%= care_home.town %>
        <%= care_home.postcode %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render '/refinery/content_page' %>
